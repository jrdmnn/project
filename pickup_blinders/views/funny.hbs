<h1 id="feed">
  <a href="/feed/funny">Funny</a>
  <a href="/feed/tinder">Tinder</a>
  <a href="/feed/cute">Cute</a>
  <a href="/feed/smart">Smart</a>
</h1>

<div id="filter">
  <button id="best">Best</button>
  <button id="new">New</button>
</div>

<h3 id="post">
  <a href="/new">Post new Pickup Line</a>
</h3>

{{#each post}}
<div id="pickUpLine">
  <a href="">{{userid.username}}</a>
  <div>{{created_at}}</div>
  <button class="upVote" id={{this._id}} score={{this.score}}>Up </button>
  <button class="downVote" id={{this._id}} score={{this.score}}>Down</button>
  <span class={{_id}}>{{score}}</span>
  <h1>
    {{content}}
  </h1>
  <a href="">Check Comments</a>
</div>
{{/each}}

<script>
  console.log(axios)
  // Button for Voting Down
    function voteDown(e) {
    // console.log(document.getElementsByClassName(e.target.id)[0])
    axios.post(`/downvote/${e.target.id}`).then(response => {
      // console.log(response)
      document.getElementsByClassName(e.target.id)[0].innerHTML = response.data
    })
  };
    document.querySelectorAll(".downVote").forEach(el => {
    el.addEventListener("click", voteDown)
  });

//Button for Voting Up

  function voteUp(e) {
    // console.log(document.getElementsByClassName(e.target.id)[0])
    axios.post(`/vote/${e.target.id}`).then(response => {
      // console.log(response)
      document.getElementsByClassName(e.target.id)[0].innerHTML = response.data
    })
  }
  document.querySelectorAll(".upVote").forEach(el => {
    el.addEventListener("click", voteUp)
  });
</script>